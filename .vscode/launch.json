    "version": "0.2.0",
    "configurations": [


            {
                "name": "(Windows) Launch - CMake",
                "type": "cppvsdbg",
                "request": "launch",
                "program": "${command:cmake.launchTargetPath}",
                "args": [],
                "cwd": "${fileDirname}",
                "console": "integratedTerminal"
            },
            {
                "name": "(Windows) Launch - Task",
                "type": "cppvsdbg",
                "request": "launch",
                "program": "${workspaceFolder}/build/main.exe",
                "args": [],
                "cwd": "${fileDirname}",
                "console": "integratedTerminal",
                "preLaunchTask": "Clang++ Build Active File",
            },
            {
                "name": "(Windows) Launch - Local",
                "type": "cppvsdbg",
                "request": "launch",
                "program": "${workspaceFolder}/build/main.exe",
                "args": [],
                "cwd": "${fileDirname}",
                "console": "integratedTerminal"
            },
            {
                "name": "LLDB Launch - CMake",
                "type": "lldb",
                "request": "launch",
                "program": "${command:cmake.launchTargetPath}",
                "args": [],
                "cwd": "${fileDirname}",
                "expressions": "native",
                "env": {
                    "PATH": "${env:PATH}:${command:cmake.getLaunchTargetDirectory}",
                },
                "breakpointMode": "path",
            },
            {
                "name": "LLDB Launch - Task",
                "type": "lldb",
                "request": "launch",
                "program": "${workspaceFolder}/build/main.exe",
                "args": [],
                "cwd": "${fileDirname}",
                "breakpointMode": "path",
                "expressions": "native",
                "preLaunchTask": "Clang++ Build Active File",
            },
            {
                "name": "LLDB Launch - Local",
                "type": "lldb",
                "request": "launch",
                "program": "${workspaceFolder}/build/main.exe",
                "args": [],
                "cwd": "${fileDirname}",
                "breakpointMode": "path",
                "expressions": "native",
            },
        ]
    
}