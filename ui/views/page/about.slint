import { Token } from "../../global.slint";
import { Page, Empty, ContentDialog } from "../../components/index.slint";
import { AboutSlint, Button, ScrollView } from "std-widgets.slint";
import { SLink} from "../../modules/surrealism-ui/index.slint";
import { MessageManager, MessageType } from "../../logic/index.slint";

// Made with Slint badge
export component AboutSlint inherits Rectangle {
    AboutSlint { }
}

export global AboutPageBridge {
    in-out property <string> version:"v0.0.0-00000000";
    // in-out property <bool> is_lastest: false;
    callback check-update() -> bool;
    callback open-web(string);
    callback get-log() -> string;
    in-out property <string> updateLog: "";
}

component Dependence inherits Rectangle {
    in property <string> content;
    height: 18px;
    width: text.preferred-width + 9px;
    border-width: 1px;
    border-color: Token.color.outline;
    border-radius: 9px;
    background: transparent;
    text := Text {
        vertical-alignment: center;
        horizontal-alignment: center;
        text: parent.content;
        font-size: Token.font.label.large.size;
        font-weight: Token.font.label.large.weight;
        color: Token.color.on-surface;
    }
}

component Divider inherits Rectangle {
    background: Token.color.outline-variant;
    width: 90%;
    height: 1px;
}

export component AboutPage inherits Page {
    popup := ContentDialog {
        z: 999;
        width: root.width;
        height: root.height;
        dialog-title: "更新日志";
        confirm-btn-text: "更新";
        cancel-btn-text: "取消";
        ScrollView {
            VerticalLayout {
                text := Text {
                    width: 100%;
                    text: AboutPageBridge.updateLog;
                    font-size: Token.font.body.large.size;
                    font-weight: Token.font.body.large.weight;
                    color: Token.color.on-surface;
                    wrap: TextWrap.char-wrap;
                }
            }
        }

        confirm => {
            AboutPageBridge.open-web("https://github.com/NJUPT-SAST/sast-evento/releases");
            popup.close();
        }
        cancel => {
            popup.close();
        }
    }

    ScrollView {
        verticallayout := VerticalLayout {
            alignment: LayoutAlignment.start;
            padding: 50px;
            spacing: 20px;
            Text {
                text: "关于";
                font-size: Token.font.display.medium.size;
                font-weight: Token.font.display.medium.weight;
            }

            HorizontalLayout {
                alignment: center;
                Image {
                    width: 220px;
                    image-fit: contain;
                    source: Token.image.display.evento;
                    animate opacity {
                        duration: 1000ms;
                        easing: ease-in-out;
                    }
                    init => {
                        self.opacity = 0;
                        self.opacity = 1;
                    }
                }

                AboutSlint {
                    animate opacity {
                        duration: 1000ms;
                        easing: ease-in-out;
                    }
                    init => {
                        self.opacity = 0;
                        self.opacity = 1;
                    }
                }
            }

            Rectangle {
                border-radius: 8px;
                border-width: 1px;
                border-color: Token.color.outline;
                VerticalLayout {
                    padding: 20px;
                    spacing: 12px;
                    HorizontalLayout {
                        alignment: space-between;
                        Text {
                            text: "版本信息 " + AboutPageBridge.version;
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        Button {
                            text: "检查更新";
                            clicked => {
                                if (AboutPageBridge.check-update()) {
                                    popup.open();
                                } else {
                                    MessageManager.show-message("已是最新版本", MessageType.Info);
                                    self.text = "已是最新版本";
                                }
                            }
                        }
                    }

                    Divider { }

                    HorizontalLayout {
                        alignment: space-between;
                        Text {
                            text: "漏洞报告 / 功能建议";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        Button {
                            text: "GitHub Issues";
                            clicked => {
                                AboutPageBridge.open-web("https://github.com/NJUPT-SAST/sast-evento/issues")
                            }
                        }
                    }
                }
            }

            Rectangle {
                border-radius: 8px;
                border-width: 1px;
                border-color: Token.color.outline;
                VerticalLayout {
                    padding: 20px;
                    spacing: 15px;
                    HorizontalLayout {
                        alignment: space-between;
                        Text {
                            text: "网页端";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        SLink {
                            text: "https: //evento.sast.fun";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            clicked => {
                                AboutPageBridge.open-web("https://evento.sast.fun");
                            }
                        }
                    }

                    Divider { }

                    HorizontalLayout {
                        alignment: space-between;
                        Text {
                            text: "GitHub 仓库";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        SLink {
                            text: "https://github.com/NJUPT-SAST/sast-evento";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            clicked => {
                                AboutPageBridge.open-web("https://github.com/NJUPT-SAST/sast-evento");
                            }
                        }
                    }

                    Divider { }

                    VerticalLayout {
                        spacing: 10px;
                        Text {
                            text: "项目依赖";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        Rectangle {
                            clip: true;
                            ScrollView {
                                HorizontalLayout {
                                    spacing: 12px;
                                    Dependence {
                                        content: "Boost.Beast";
                                    }

                                    Dependence {
                                        content: "Boost.Url";
                                    }

                                    Dependence {
                                        content: "OpenSSL";
                                    }

                                    Dependence {
                                        content: "Slint";
                                    }

                                    Dependence {
                                        content: "toml++";
                                    }

                                    Dependence {
                                        content: "nlohmann-json";
                                    }

                                    Dependence {
                                        content: "spdlog";
                                    }

                                    Dependence {
                                        content: "keychain";
                                    }
                                }
                            }
                        }
                    }

                    Divider { }

                    HorizontalLayout {
                        alignment: space-between;
                        Text {
                            text: "开源协议";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }

                        Text {
                            text: "MIT license Copyright (c) 2024 NJUPT-SAST";
                            font-size: Token.font.body.large.size;
                            font-weight: Token.font.body.large.weight;
                            color: Token.color.on-surface;
                            vertical-alignment: center;
                        }
                    }
                }
            }

            Rectangle {
                border-radius: 8px;
                border-width: 1px;
                border-color: Token.color.outline;
                VerticalLayout {
                    padding: 20px;
                    spacing: 15px;
                    Text {
                        text: "贡献者";
                        font-size: Token.font.body.large.size;
                        font-weight: Token.font.body.large.weight;
                        color: Token.color.on-surface;
                        vertical-alignment: center;
                    }

                    ScrollView {
                        HorizontalLayout {
                            Text {
                                text: "贡献者列表";
                            }
                        }
                    }
                }
            }
        }
    }
}
