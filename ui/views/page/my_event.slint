        },
        {
            id: 1,
            summary: "软件研发部 C++组授课",
            summary-abbr: "软",
            time: "24.9.30 14:30 - 16:00",
            description: "C++组授课",
            location: "仙林校区 大活101",
        },
        {
            id: 1,
            summary: "软件研发部 C++组授课",
            summary-abbr: "软",
            time: "24.9.30 14:30 - 16:00",
            description: "C++组授课",
            location: "仙林校区 大活101",
        },
        {
            id: 1,
            summary: "软件研发部 C++组授课",
            summary-abbr: "软",
            time: "24.9.30 14:30 - 16:00",
            description: "C++组授课",
