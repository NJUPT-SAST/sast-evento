export global MenuOverlayBridge {
    in-out property <bool> is-show: false;
    in-out property <string> user-name:"Áî®Êà∑Âêç";
    in-out property <string> user-signature: "‰∏™ÊÄßÁ≠æÂêç";
    in-out property <image> user-avatar: Token.image.display.avatar[0];
    callback open-link-web();
