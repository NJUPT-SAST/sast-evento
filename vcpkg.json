{
    "name": "sast-evento",
    "dependencies": [
        "boost-system",
        "boost-beast",
        "boost-dll",
        "boost-url",
        "boost-process",
        "openssl",
        "nlohmann-json",
        "spdlog",
        "tomlplusplus",
        "gettext-libintl",
        {
            "name": "pkgconf",
            "host": true
        },
        {
            "name": "libsecret",
            "platform": "!(windows | uwp | osx)"
        },
        {
            "name": "liburing",
            "platform": "!(windows | uwp | osx)"
        }
    ],
    "features": {
        "qt-from-vcpkg": {
            "description": "Use Qt from vcpkg",
            "dependencies": [
                {
                    "name": "qtbase",
                    "default-features": false,
                    "features": [
                        "default-features",
                        "network",
                        "opengl",
                        "png",
                        "widgets"
                    ]
                }
            ]
        }
    }
}